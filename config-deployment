//FRONTEND DEPLOYMENT
git clone https://ibraheem-tkxel:ATBBrkS8AFSWLB8XMqsebpthK4GU85736242@bitbucket.org/tkxel/profitoptics-ai.git
cd profitoptics-ai
cp /home/ubuntu/.naw.env ./.env
docker build --no-cache -t profitoptics-ai-frontend .
cd ..
rm -rf profitoptics-ai
docker stop naw-profitoptics-ai-frontend || true && docker rm naw-profitoptics-ai-frontend || true
docker run -d --name naw-profitoptics-ai-frontend -p 3006:3000 -v /home/ubuntu/.profitoptics.env:/app/.env profitoptics-ai-frontend

//BACKEND DEPLOYMENT
git clone https://ibraheem-tkxel:ATBBrkS8AFSWLB8XMqsebpthK4GU85736242@bitbucket.org/tkxel/profitoptics-ai.git
cd profitoptics-ai
git checkout -b backend origin/backend
docker build --no-cache -t profitoptics-ai .
cd ..
rm -rf profitoptics-ai
docker stop naw-profitoptics-ai || true && docker rm naw-profitoptics-ai || true
docker run -d --name naw-profitoptics-ai -p 8889:8000 --network redisnetwork -v /home/ubuntu/.naw.env:/app/.env -v /home/ubuntu/profit-optics-firebase_creds.json:/app/firebase_creds.json profitoptics-ai
